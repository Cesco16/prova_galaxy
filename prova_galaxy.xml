<tool id ="prova_galaxy" name ="prova_galaxy" version="@TOOL_VERSION@+galaxy0" profile="20.05">
  <description>This tool takes methyldackel data and computes freqc.</description>
  <macros>
    <token name="@TOOL_VERSION@">1.0.0</token>
  </macros>
  <requirements>
    <requirement type="package" version="@TOOL_VERSION@">bwameth</requirement>
  </requirements>
  <version_command>python '$__tool_directory__/prova_galaxy.py'</version_command>
  <command detect_errors="aggressive"><![CDATA[
    prova_galaxy.py --inputfile '${inputdackel}' --outputFile '${result}'
    ]]></command>
    <inputs>
       <param name="inputdackel" type="text"/>
    </inputs>
    <outputs>
      <data name="result" format="txt" from_work_dir="result.txt" label="${tool.name} on ${on_string}"/>
    </outputs>
    <test>
      <param name="test_data" value="test_data.txt"/>
      <output name="result1" file="result_test.txt" ftype="text"/>
    </test>
    <help><![CDATA[
**What it does**
takes a methyldackel file
    ]]></help>
</tool>
